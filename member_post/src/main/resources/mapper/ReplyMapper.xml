<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mapper.ReplyMapper">
  <insert id="insert">
  	insert into tbl_reply (content, writer, pno) 
  	values (#{id}, #{content}, #{writer}, #{pno})
  </insert>
  <update id="update">
  	update tbl_reply set content = #{content}, update_date = now() where rno = #{rno}
  </update>
  
  <delete id="delete">
  	delele from tbl_reply where rno = #{rno}
  </delete>
  <delete id="deleteAll">
  	delele from tbl_reply where pno = #{pno}
  </delete>
  
  <select id="selectOne" resultType="vo.Reply">
  	select * from tbl_reply where rno = #{rno}
  </select>
  <select id="selectList" resultType="vo.Reply">
  	select * from tbl_reply where pno = #{pno}
  </select>
  
</mapper>